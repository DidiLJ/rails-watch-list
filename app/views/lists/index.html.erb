
<div class="container d-flex flex-wrap gap-3 cards">
  <% @lists.each do |list| %>
  <div class="card" style="width: 18rem;">
    <div class="card-body">
      <h5 class="card-title"><%= list.name %></h5>
      <%= link_to "See details", list_path(list) %>
    </div>
  </div>
<% end %>
</div>
<div class="d-flex justify-content-center mt-3">
  <%= link_to "Create a new list", new_list_path, class: "btn btn-flat" %>
</div>
