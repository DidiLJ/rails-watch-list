<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4), rgba(0,0,0,0.4)), url('<%= asset_path("banner.png") %>');">
  <div class="container text-center">
    <h1>Save any kind of <strong>movies</strong> 🎞️!</h1>
    <p>Create and share your favorite movie collections</p>
  </div>
</div>

<div class="container d-flex flex-wrap gap-3 cards">
  <% @lists.each do |list| %>
    <div class="card card-custom">
      <img src='<%=list.image_url%>' class="card-img-top" alt="<%= list.name %>">
      <div class="card-body">
        <h5 class="card-title"><%= list.name %></h5>
        <%= link_to "See details", list_path(list) %>
      </div>
    </div>
  <% end %>
</div>
<div class="d-flex justify-content-center mt-3">
  <%= link_to "Create a new list", new_list_path, class: "btn btn-flat" %>
</div>
