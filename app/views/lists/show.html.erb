<h1>SHOW of <%= @list.name %></h1>

<div class="container mt-4">
  <div class="row">
    <% @bookmarks.each do |bookmark| %>
      <div class="col-md-4 mb-4">
        <div class="card">
          <img src="<%= "https://image.tmdb.org/t/p/w500/#{bookmark.movie.poster_url}" %>" class="card-img-top" alt="<%= bookmark.movie.title %>">
          <div class="card-body">
            <h5 class="card-title"><%= bookmark.movie.title %></h5>
            <p class="card-text"><strong>Note:</strong> <%= bookmark.movie.rating %> / 10</p>
            <p class="card-text"><strong>Commentaire:</strong> <%= bookmark.comment %></p>
            <div class="d-flex justify-content-between">
              <%= link_to "Voir détails", bookmark_path(bookmark), class: "btn btn-primary" %>
              <%= link_to "Supprimer", bookmark_path(bookmark), data: { turbo_method: :delete, turbo_confirm: "Êtes-vous sûr?" }, class: "btn btn-danger" %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <div class="mt-4">
    <%= link_to "Add a bookmark", new_list_bookmark_path(@list), class: "btn btn-primary" %>
    <%= link_to "Back to list", root_path, class: "btn btn-secondary" %>
  </div>
</div>
